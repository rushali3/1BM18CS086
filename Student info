#include <stdio.h>
struct student
{
    char name[50];
    int roll;
    float m1,m2,m3;
} s;
int main()
{
    float total;
    printf("Enter information:\n");
    printf("Enter name: ");
    scanf("%s", s.name);
    printf("Enter roll number: ");
    scanf("%d", &s.roll);
    printf("Enter three subject marks: ");
    scanf("%f %f %f", &s.m1,&s.m2,&s.m3);
    printf("Displaying Information:\n");
    printf("Name: ");
    puts(s.name);
    printf("\nRoll number: %d\n",s.roll);
    printf("Total: %.1f\n", total);
    return 0;
}
